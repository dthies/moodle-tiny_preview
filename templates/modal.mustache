{{!
    @template tiny_preview/modal

    Modal to display a preview within the Tiny Editor.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:

    Example context (json):
    {
        "content": "...html...",
        "elementid": "exampleId",
        "modaltitle": "Preview"
    }
}}

{{< core/modal }}

    {{$title}}
        {{#str}} modaltitle, tiny_preview {{/str}}
    {{/title}}

    {{$body}}
           <div class="id-{{ elementid }}">{{{ content }}}</div>
    {{/body}}

    {{$footer}}
        <button type="button" class="btn btn-secondary" data-action="cancel">{{#str}} close, tiny_preview {{/str}}</button>
    {{/footer}}
{{/ core/modal }}
